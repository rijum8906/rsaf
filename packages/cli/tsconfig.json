{
	"extends": "../../tsconfig.base.json",

	"compilerOptions": {
		// Output settings
		"composite": true,
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		// Project structure
		"rootDir": "src",
		"outDir": "dist",

		// Declarations
		"declaration": true,
		"emitDeclarationOnly": false,

		// Strictness + compatibility
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},

	// Files to include
	"include": ["src"]
}
